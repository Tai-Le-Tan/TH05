<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse">

        <img src="https://vutaweb.com/contents/v2/images/slide_background.jpg" style="height:300px; width:100%" />
        <div class="container-fluid">

            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Product", "Index", "Product")</li>
                <li class="active">@Html.ActionLink("Categories", "Index", "Categories")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <img src="@Url.Content("~/Content/images/shopping-cart.png") " style="height:30px;margin:10px; " />
                    @Html.Action("BagCarts", "ShoppingCart")
                </li>
                <li></li>
                @if (Session["ID"] != null)
                {
                    <li class="glyphicon glyphicon-user" style="color:white; margin-left:20px;margin-right:20px;margin-top:15px">@Session["ID"]</li>
                    <li>@Html.ActionLink("Logout", "Logout", "LoginUser")</li>
                    <li  style="color:white; margin-left:20px;margin-right:20px;margin-top:15px"> <p>Hello @Session["ID"]</p></li>
                }
                else
                {
                    <li>
                        @Html.ActionLink("Login", "Index", "LoginUser");

                    </li>
                    <li>
                        @Html.ActionLink("Register", "RegisterUser", "LoginUser")
                    </li>
                    <li  style="color:white; margin-left:20px;margin-right:20px;margin-top:15px"> <p>Hello</p></li>
                }

            </ul>
        </div>
    </nav>
    <div class="container-fluid body-content">
         <div class="row">
             <div class="col-md-2">
                 <ul style="text-decoration:none;background-color:aqua;margin-top:20px;list-style-type:none;padding:10px">
                     <li>
                         <a href="/OrderDetail/GroupByTop5" style="color:white;"id="animation_top5">Top 5 sản phẩm bán chạy nhất</a>
                     </li>
                 </ul>
                 <ul style="list-style-type:none">
                     <li>
                         <a href="/Product/SearchOption" class="btn btn-default">Tìm theo giá</a>
                     </li>
                 </ul>
                 @{ Html.RenderAction("CategoryParial", "Categories");}

             </div>
             <div class="col-md-10">
                 @RenderBody()
             </div>
         </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
