@model  List<TH05.Models.Product>
<div style="margin-top: 50px"></div>
@using (Html.BeginForm("SearchOption", "Product"))
{
    <text>Từ</text>
    <input type="number" name="min" />
    <text>Đến</text>
    <input type="number" name="max" />

    <input type="submit" value="Search" />
    <div class="container" style="margin-top: 30px">
        <div class="row">
            @foreach (var pro in Model)
            {
                <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3" style="margin: auto">
                    <div class="card">
                        <p>@Html.DisplayFor(model => pro.NamePro)</p>
                        <img src="@pro.ImagePro" height="140" width="120" />
                        <p>@Html.DisplayFor(model => pro.DecriptionPro)</p>
                        <p>@Html.DisplayFor(model => pro.Price)</p>
                        <a href="/ShoppingCart/AddtoCart/@pro.ProductID" class="btn btn-success">Buy</a>
                    </div>
                </div>
            }
        </div>
    </div>
}

